@model IEnumerable<Crafty.Models.Product_tbl>

@{
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}

@section styles{
    <link href="~/plugins/datatables/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <link href="~/plugins/datatables/buttons.bootstrap4.min.css" rel="stylesheet" type="text/css" />
}

<!-- Page-Title -->
<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <h4 class="page-title">Product List</h4>
        </div><!--end page-title-box-->
    </div><!--end col-->
</div>
<!-- end page title end breadcrumb -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">

                <h4 class="mt-0 header-title">Product Stock</h4>
                <p class="text-muted mb-4 font-13">
                    Available all products.
                </p>




                <table id="datatable" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">

                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Product_Name)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.Category)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.Product_Base_Price)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Product_Stock)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Product_Sold)
                            </th>
                            <th> Action </th>
                        </tr>
                    </thead>


                    @foreach (var item in Model)
                    {
                        <tbody>
                            <tr>

                                <td>
                                    <img src="@Url.Content(item.Product_Image)" alt="" height="52">

                                    <p class="d-inline-block align-middle mb-0">
                                        <a href="" class="d-inline-block align-middle mb-0 product-name">@Html.DisplayFor(modelItem => item.Product_Name)</a>
                                    </p>
                                </td>

                                <td>@Html.DisplayFor(modelItem => item.Category)</td>

                                <td>@Html.DisplayFor(modelItem => item.Product_Base_Price)</td>




                                <td><span class="badge badge-soft-warning">@Html.DisplayFor(modelItem => item.Product_Stock)</span></td>

                                <td>@Html.DisplayFor(modelItem => item.Product_Sold)</td>
                                <td>
                                    @Html.ActionLink("Edit", "EditProduct", new { id = item.P_ID }) <i class="far fa-edit text-info mr-1"></i> |

                                    @Html.ActionLink("Delete", "DeleteProduct", new { id = item.P_ID }) <i class="far fa-trash-alt text-danger"></i>
                                </td>

                            </tr>
                        </tbody>
                    }

                </table>


            </div>
        </div>
    </div> <!-- end col -->
</div> <!-- end row -->


@section scripts {
    <script src="~/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/plugins/datatables/dataTables.bootstrap4.min.js"></script>

    <script type="text/javascript">
        $('#datatable').DataTable();
    </script>
}