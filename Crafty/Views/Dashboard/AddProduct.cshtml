@model Crafty.Models.Product_tbl

@{
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}

<!-- Page-Title -->
<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <div class="float-right">
            </div>
            <h4 class="page-title">Add Product</h4>
        </div><!--end page-title-box-->
    </div><!--end col-->
</div>
<!-- end page title end breadcrumb -->


<div class="col-lg-6">
    <div class="card">
        <div class="card-body">
            <h4 class="mt-0 header-title"></h4>
            <p class="text-muted mb-3">
               
            </p>

            @using (Html.BeginForm("AddProduct", "Dashboard", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Products</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">

	                    <label>Product Name</label>
	                    <div class="col-md-10">
		                    @Html.EditorFor(model => model.Product_Name, new { htmlAttributes = new { @class = "form-control" } })
		                    
		                    @Html.ValidationMessageFor(model => model.Product_Name, "", new { @class = "text-danger" })
	                    </div>
                    </div>


                    <div class="form-group">
                        <label>Product Image</label>
                        <div class="col-md-10">
                            <input type="file" name="ImageFile" required />
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Product Base Price</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Product_Base_Price, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Product_Base_Price, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Product Offer Price</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Product_Offer_Price, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Product_Offer_Price, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Product Discount</label>
	                    <div class="col-md-10">
		                    @Html.EditorFor(model => model.Product_Discount, new { htmlAttributes = new { @class = "form-control" } })
		                    @Html.ValidationMessageFor(model => model.Product_Discount, "", new { @class = "text-danger" })
	                    </div>
                    </div>

                    <div class="form-group">
                        <label>Category</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Category, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Features</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Features, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Features, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Product Description</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Product_Descriptation, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Product_Descriptation, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Product Stock</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Product_Stock, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Product_Stock, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Product Sold</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Product_Sold, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Product_Sold, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" class="btn btn-gradient-primary waves-effect waves-light" value="Add Product"/>
                        </div>
                    </div>
                </div>
            }

        </div><!--end card-body-->
    </div><!--end card-->
</div> <!-- end col -->



@section scripts {
    <script src="~/plugins/parsleyjs/parsley.min.js"></script>
    <script src="~/scripts/pages/jquery.validation.init.js"></script>
    <script src="~/scripts/jquery.core.js"></script>
}