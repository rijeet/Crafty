        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product_Sold)
        </td>
        <td>
            @Html.ActionLink("EditProduct", "EditProduct", new { id=item.P_ID }) |
            @Html.ActionLink("DetailsProduct", "DetailsProduct", new { id=item.P_ID }) |
            @Html.ActionLink("DeleteProduct", "DeleteProduct", new { id=item.P_ID })
        </td>
    </tr>
